datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  password  String  

  recipes   Recipe[] 
}

model Recipe {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  title         String
  ingredients   Json
  instructions  Json
  totalTime     Int
  userId        Int      @map("userId")

  user          User     @relation(fields: [userId], references: [id])
}